{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "types": [
      "astro/client"
    ],
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ]
    }
  }
}