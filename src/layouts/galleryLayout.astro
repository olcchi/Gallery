---
import Noise from "@components/noise.astro";
import { themeScript } from "@scripts/themeController";
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/icon.png" />
  </head>
  <body class="bg-[#FCFAF2] flex justify-center items-center">
    <Noise />
    <a
      href="/"
      class="text-[#1C1C1C] font-mono font-bold italic fixed top-5 left-5 cursor-pointer!"
      >Gallery</a
    >
    <img
      src="/paper.png"
      alt=""
      class="fixed w-100 opacity-100 -z-10 select-none!"
    />
    <main class="h-100dvh flex flex-col justify-center">
      <slot />
    </main>
  </body>
</html>

<script is:inline set:html={themeScript} />
