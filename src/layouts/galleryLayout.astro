---
import Noise from "@components/noise.astro";
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.png" />
  </head>
  <body class="bg-black flex justify-center items-center">
    <Noise />
    <a
      href="/"
      class="text-white font-serif italic fixed top-5 left-5 cursor-pointer!"
      >Gallery</a
    >
    <img
      src="/grainyGradient.svg"
      alt=""
      class="fixed inset-0 opacity-60 -z-10 select-none! object-cover min-h-screen"
    />
    <main class="min-h-screen flex flex-col justify-center">
      <slot />
    </main>
  </body>
</html>
