---
import Header from "@components/navigator/header.astro";
import Mask from "@components/navigator/mask.astro";
// import Noise from "@components/noise.astro";
import { themeScript } from "@scripts/themeController";
import "../styles/main.css";
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="referrer" content="no-referrer" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.png" />
  </head>
  <body class="themeBase">
    <!-- <Noise /> -->
    <main class="relative">
      <div class="fixed z-40 top-0 w-full">
        <Header />
      </div>
      <div class="fixed bottom-0 z-30">
        <Mask />
      </div>
      <article class="mx-auto mt-20" style="width: min(90ch, 95vw);">
        <slot />
      </article>
    </main>
  </body>
</html>

<script is:inline set:html={themeScript} />
