---
import Header from "@components/navigator/header.astro";
import Mask from "@components/navigator/mask.astro";

import { themeScript } from "@scripts/themeController";
import { ViewTransitions } from "astro:transitions";
import "../styles/main.css";
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline set:html={themeScript} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="referrer" content="no-referrer" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.png" />
    <ViewTransitions />
  </head>
  <body
    class="bg-white font-mono text-black dark:bg-[#050505] dark:text-[#Eaeaea] min-h-screen transition-colors duration-300"
  >
    <main class="relative">
      <Header />
      <div class="fixed bottom-0 z-30">
        <Mask />
      </div>
      <article class="mx-auto mt-20" style="width: min(90ch, 95vw);">
        <slot />
      </article>
    </main>
  </body>
</html>
